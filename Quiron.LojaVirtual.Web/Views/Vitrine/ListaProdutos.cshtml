@using Quiron.LojaVirtual.Web.HtmlHelpers
@model Quiron.LojaVirtual.Web.Models.ProdutoViewModel


@foreach (var p in Model.Produtos)
{
    <div>
        <h3>@p.Nome</h3>
        @p.Descricao
        <h3> @p.Preco.ToString("C")</h3>


    </div>
}
<!--Utilizando o gerador de paginação-->
@Html.pageLinks(Model.Paginacao, x => Url.Action("ListaProdutos", new{pagina = x}))